---
import properties from "@features/properties/data/properties.json"
import PropertiesCard from "@features/properties/components/PropertyCard.astro"

const recentProperties = properties.sort((a, b) => new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime())
---

<!-- Recent Properties -->
<section class="py-16 bg-white">
	<div class="container mx-auto px-4">
		<div class="text-center mb-12">
			<h2 class="text-3xl md:text-4xl font-bold uppercase mb-4">
				Propiedades <span class="text-[#fe7f32]">recientes</span>
			</h2>
			<p class="text-gray-600 max-w-2xl mx-auto">
				Explora las nuevas propiedades que se han sumado recientemente
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{
				recentProperties.map((property) => (
					<PropertiesCard
						title={property.title}
						location={property.location}
						bathrooms={property.bathrooms}
						area={property.area}
						rooms={property.rooms}
						image={property.images[0]}
						floors={property.floors}
					/>
				))
			}
		</div>

		<div class="text-center mt-12">
			<a
				href="#"
				class="inline-block bg-midnight-blue hover:bg-midnight-blue/90 text-white px-8 py-3 rounded font-bold transition"
				>Ver todas las propiedades</a
			>
		</div>
	</div>
</section>
