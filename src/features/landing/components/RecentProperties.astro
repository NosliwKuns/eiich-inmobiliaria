---
import PropertiesCard from "@core/components/PropertiesCard.astro"
---

<!-- Recent Properties -->
<section class="py-16 bg-white">
	<div class="container mx-auto px-4">
		<div class="text-center mb-12">
			<h2 class="text-3xl md:text-4xl font-bold uppercase mb-4">
				Propiedades <span class="text-[#fe7f32]">recientes</span>
			</h2>
			<p class="text-gray-600 max-w-2xl mx-auto">
				Explora las nuevas propiedades que se han sumado recientemente
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<PropertiesCard />

			<PropertiesCard />

			<PropertiesCard />
		</div>

		<div class="text-center mt-12">
			<a
				href="#"
				class="inline-block bg-midnight-blue hover:bg-midnight-blue/90 text-white px-8 py-3 rounded font-bold transition"
				>Ver todas las propiedades</a
			>
		</div>
	</div>
</section>
