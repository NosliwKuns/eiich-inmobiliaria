---
import "@core/styles/global.css"
import Navbar from "@core/components/Navbar.astro"
import Footer from "@core/components/Footer.astro"
import Analytics from "@vercel/analytics/astro"
import WhatsappButton from "@core/components/WhatsappButton.astro"

export interface Props {
	title?: string
	description?: string
	url?: string
	image?: string
	whatsappMessage?: string
}

const {
	title = "Compra y Venta de Propiedades | Eiich Inmobiliaria",
	description = "Eiich Inmobiliaria se especializa en la compra y venta de departamentos, terrenos y locales comerciales. Ofrecemos un servicio personalizado, confiable y transparente para ayudarte a encontrar tu próxima propiedad.",
	url = "https://www.eiichinmobiliaria.com",
	image = "https://res.cloudinary.com/dsbifsorx/image/upload/v1749756464/portada_x1ahhy.jpg",
	whatsappMessage,
} = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Eiich Inmobiliaria" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={image} />

		<script type="application/ld+json" is:inline>
			{
				"@context": "https://schema.org",
				"@type": "RealEstateAgent",
				"name": "Eiich Inmobiliaria",
				"url": "https://www.eiichinmobiliaria.com",
				"logo": "https://res.cloudinary.com/dsbifsorx/image/upload/v1749749557/logo_skz9qt.png",
				"image": "https://www.eiichinmobiliaria.com/oficina.jpg",
				"description": "Eiich Inmobiliaria se especializa en la compra y venta de departamentos, terrenos y locales comerciales. Ofrecemos un servicio personalizado, confiable y transparente para ayudarte a encontrar tu próxima propiedad."
			}
		</script>

		<link href="https://unpkg.com/maplibre-gl@2.4.0/dist/maplibre-gl.css" rel="stylesheet" />
		<script src="https://unpkg.com/maplibre-gl@2.4.0/dist/maplibre-gl.js"></script>
		<script>

			import Mapkick from "src/utils/mapkick.js";
			Mapkick.options = {
				style: "https://demotiles.maplibre.org/style.json",
			}
		</script>
	</head>
	<body>
		<Analytics />
		<Navbar />
		<slot />
		<WhatsappButton message={whatsappMessage} url={url} />
		<Footer />
	</body>
</html>
